<div class="scores">
  <h2><%= @user.name %> scores</h2>
    <% match_number = 1 %>
    <% @matches.each do |match| %>
      <h3>Match number: <%= match_number %> </h3>
      <% match_number += 1 %>
      <p><%= match.winner ? 'You won the match' : 'Your opponent won the match' %></p>

        <% match.games.each do |game| %>
        <p>Your Score: <%= game.score %></p>
        <p>Opponent Score: <%= game.compscore %></p>
        <%= game.winner ? 'You won the game' : 'Your opponent won the game' %>
      <% end %>
    <% end %>

</div>